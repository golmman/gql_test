{
    "private": true,
    "name": "gql_test",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:golmman/gql_test.git",
    "author": "Dirk Kretschmann <kretschmanndi@gmail.com>",
    "license": "MIT",
    "packageManager": "yarn@3.2.2",
    "workspaces": [
        "./packages/cart/",
        "./packages/gateway/",
        "./packages/product/"
    ],
    "scripts": {
        "compile": "tsc --build --force tsconfig.json",
        "build": "tsc",
        "compose": "rover supergraph compose --config ./src/gateway/supergraph.yaml > ./src/gateway/supergraph_schema.gql",
        "start": "./start.sh",
        "start:cart": "yarn compile && yarn workspace cart start",
        "start:gateway": "yarn build && node dist/gateway/gateway.js",
        "start:product": "yarn build && node dist/product/product.js"
    },
    "dependencies": {
        "@apollo/gateway": "^2.0.5",
        "@apollo/subgraph": "^2.0.5",
        "apollo-server": "^3.10.0",
        "graphql": "^16.5.0"
    },
    "devDependencies": {
        "prettier": "^2.7.1",
        "typescript": "^4.7.4"
    }
}
